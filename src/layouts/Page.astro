---
import "@fontsource-variable/noto-serif-georgian";
import { Icon } from "astro-icon/components";
import "../whitney.css";
---

<script>
    const $ = document.querySelector.bind(document);
    const pageMargin = 2; // rem
    const page = $("article")!;

    const rootFontSize = +window.getComputedStyle(document.documentElement).fontSize.slice(0, -2);
    const margin = rootFontSize * pageMargin; // px

    const pageRect = page.getBoundingClientRect();
    const pageWidth = pageRect.width + 2 * margin;
    const pageHeight = pageRect.height + 2 * margin;

    function resize() {
        const viewWidth = window.innerWidth;
        const viewHeight = window.innerHeight;

        const widthDelta = viewWidth / pageWidth;
        const heightDelta = viewHeight / pageHeight;

        const minDelta = Math.min(widthDelta, heightDelta);

        page.style.transform = minDelta < 1 ? `scale(${minDelta})` : "";
    }

    resize();
    window.addEventListener("resize", resize);
</script>

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <title>Resume</title>
    </head>
    <body x-data="{ margins: false }">
        <article>
            <slot />
            <div x-cloak x-show="margins" class="margins"></div>
        </article>
        <div class="settings-group" tabindex="0" @click.outside="$el.blur()">
            <Icon class="settings-button" name="mdi:menu" />
            <div class="settings-dialog">
                <h3>Settings</h3>
                <span class="row">
                    <label for="margins-toggle">Show Margins</label>
                    <button id="margins-toggle" role="switch" :aria-checked="margins" @click="margins = !margins"></button>
                </span>
            </div>
        </div>
    </body>
</html>

<style>
    .margins {
        display: block;
        position: absolute;
        inset: 0;
        border: 0.5in solid var(--safe-area-color);
        border-image: repeating-linear-gradient(45deg, transparent, transparent 5px, var(--safe-area-color) 6px, var(--safe-area-color) 15px, transparent 16px, transparent 20px) 50/0.5in;
    }

    .settings-button {
        position: fixed;
        bottom: 8px;
        right: 8px;
        width: 36px;
        height: 36px;
        padding: 6px;
        color: white;
        background: rgba(0, 0, 0, 0.3);
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
        backdrop-filter: blur(4px);
        border-radius: 50%;
        border: 1px solid rgba(255, 255, 255, 0.18);
    }

    .settings-dialog {
        display: none;
        position: fixed;
        bottom: 8px;
        right: 8px;
        width: 240px;
        color: white;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        background: rgba(0, 0, 0, 0.9);
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
        backdrop-filter: blur(4px);
        border-radius: 10px;
        border: 1px solid rgba(255, 255, 255, 0.18);

        & h3 {
            text-align: center;
        }
    }

    .row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 4px 12px;
    }

    button[role="switch"] {
        all: unset;
        width: 40px;
        height: 24px;
        display: block;
        padding: 2px;
        border-radius: 24px;
        overflow: hidden;
        background-color: rgb(44, 44, 44);
        transition: background-color 0.3s ease-in-out;

        &::after {
            content: "";
            display: block;
            aspect-ratio: 1/1;
            border-radius: 50%;
            height: 100%;
            background-color: white;
            box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
            margin-left: 0;
            transition: margin-left 0.3s ease-in-out;
        }
    }

    .settings-group:focus-within {
        & .settings-dialog {
            display: block;
        }

        & .settings-button {
            display: none;
        }
    }

    button[role="switch"][aria-checked="true"] {
        background-color: rgb(49, 209, 88);

        &::after {
            margin-left: calc(100% - 24px);
        }
    }

    @media only print {
        .settings-group {
            display: none;
        }

        .margins {
            display: none;
        }
    }
</style>

<style is:global>
    :root {
        --h1-font-size: 2rem;
        --section-padding: 0.75rem;
        --per-item-padding: 0.5rem;
        --safe-area-color: #ff000026;
    }

    * {
        box-sizing: border-box;
    }

    [x-cloak] {
        display: none !important;
    }

    html {
        font-size: 13px;
        font-family: "Noto Serif Georgian Variable";
    }

    body {
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: black;
    }

    html,
    body {
        height: 100%;
        margin: 0;
        overflow: hidden;
    }

    article {
        position: relative;
        width: 8.5in;
        height: 11in;
        flex-shrink: 0;
        background-color: white;
        padding: 0.5in;
    }

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
        margin: 0;
        line-height: 1.3;
    }

    h1 {
        font-size: var(--h1-font-size);
    }

    h2 {
        font-size: 1.5rem;
        font-weight: normal;
    }

    h3 {
        font-size: 1.1rem;
        margin-top: var(--section-padding);
        margin-bottom: var(--per-item-padding);
        text-transform: uppercase;
    }

    h5 {
        font-size: 1.1rem;
    }

    h6 {
        font-size: 1rem;
        font-weight: normal;
        font-style: italic;
    }

    a {
        color: inherit;
        text-decoration: inherit;
    }

    ul {
        margin-top: 0;
        margin-bottom: var(--per-item-padding);
        padding-left: 1.3rem;
    }

    section > :first-child {
        border-bottom: 1px solid black;
    }

    @media only print {
        article {
            height: 100%;
            width: 100%;
            margin: 0;
            transform: none !important;
        }
    }
</style>
